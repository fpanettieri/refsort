.halves#new-collection
  .half
    section.section
      h1.title Create a collection
      p.subtitle.has-text-grey.is-hidden-mobile A set of items that needs to be sorted.

      = form_with model: @collection, local: true, multipart: true do |form|
        .field
          label.label Name
          .control
            input.input name="name" type="text" placeholder="Collection Name (max 40 chars)" maxlength="40"

        .field
          label.label Description
          .control
            input.input name="description" type="text" placeholder="What is this collection about?"

        .field
          label.label Image
          .file.has-name.is-fullwidth
            label.file-label
              input#file-picker.file-input name="img" type="file" accept="image/png,image/jpeg"
              span.file-cta
                span.file-icon
                  i.fas.fa-upload
                span.file-label Choose a fileâ€¦
              span#file-name.file-name Upload a file from your computer

        .field
          label.label Is this a private collection?
          .control
            label.radio
              input name="private" type="radio" value="false" checked="true"
              span  No
            label.radio
              input name="private" type="radio" value="true"
              span  Yes

        .field.is-grouped
          .control
            button.button.is-success Create
          .control
            button.button.is-text Cancel

  .half.splash-bg.is-hidden-mobile
    section.section
      .credit.is-unselectable data-href='https://unsplash.com/photos/VSo5d9wlT7s' data-target='_blank' Photo by Martino Pietropoli on Unsplash

javascript:
  $(function() {
    let $picker = $('#file-picker');
    let $name = $('#file-name');

    function onFilePicked() {
      if(this.files.length < 1) { return; }
      $name.html(this.files[0].name);
    }

    $picker.on('change', onFilePicked);
  })
